<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.client2.MainPageController">
    <padding>
        <Insets topRightBottomLeft="20" />
    </padding>

    <top>
        <Text text="Flight Scheduler" BorderPane.alignment="CENTER">
            <font>
                <Font name="Arial" size="24" />
            </font>
            <fill>
<!--                <Color="#333333" />-->
            </fill>
        </Text>
    </top>

    <center>
        <ImageView fitWidth="600" preserveRatio="true" smooth="true" cache="true">
            <image>
                <Image url="@airplane.jpg" />
            </image>
        </ImageView>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER">
            <Button text="Visualize Graph" style="-fx-font-size: 16px; -fx-padding: 10px 20px; -fx-background-color: #4CAF50; -fx-text-fill: white;" />
            <Button text="Add Flight" style="-fx-font-size: 16px; -fx-padding: 10px 20px; -fx-background-color: #2196F3; -fx-text-fill: white;" onAction="#handleAddFlightButton" />
            <Button text="Add Employee" style="-fx-font-size: 16px; -fx-padding: 10px 20px; -fx-background-color: #FF9800; -fx-text-fill: white;" onAction="#handleAddEmployeeButton" />
        </HBox>
    </bottom>
</BorderPane>
